{
  "trailingComma": "none",
  "arrowParens": "always",
  "printWidth": 100,
  "bracketSpacing": true,
  "jsxBracketSameLine": true,
  "tabWidth": 2,
  "semi": true,
  "singleQuote": true,
  "overrides": [
    {
      "files": "*.scss",
      "options": {
        "trailingComma": "none",
        "tabWidth": 2,
        "parser": "scss"
      }
    },
    {
      "files": "*.json",
      "options": {
        "trailingComma": "none",
        "tabWidth": 2,
        "parser": "json"
      }
    }
  ]
}
